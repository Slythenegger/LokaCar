<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccueilActivity">


    <Button
        android:id="@+id/btnNewLocation"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:onClick="newLocation"
        android:text="Nouvelle Location"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/btnLocEnCours"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnNewLocation"
        android:text="Locations en Cours"
        android:layout_alignParentLeft="true"
        android:onClick="getLocEnCours"/>

</RelativeLayout>