<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".LocationActivity">


    <TextView
        android:id="@+id/txtNewLocation"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nouvelle location :" />


    <Button
        android:id="@+id/btnVoiture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:text="Voiture"
        android:layout_alignParentLeft="true"
        android:onClick="addVoiture"/>


    <TextView
        android:id="@+id/txtIdVoiture"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnVoiture"
        android:layout_alignParentEnd="true"
        android:text=""

        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/btnClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="123dp"
        android:text="Client"
        android:layout_alignParentLeft="true"
        android:onClick="addClient"/>


    <TextView
        android:id="@+id/txtIdNomClient"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnClient"
        android:layout_alignParentEnd="true"
        android:text=""
        android:layout_alignParentRight="true" />


</RelativeLayout>