<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailClientActivity">


    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/txtNom"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.5"
            android:background="@color/colorGrey"
            android:text="Nom :" />

        <TextView
            android:id="@+id/txtPrenom"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.5"
            android:background="@color/colorGrey"
            android:text="Prénom :" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/first">


        <TextView
            android:id="@+id/txtDetailNom"
            android:layout_width="0dp"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtNom"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/txtDetailPrenom"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtNom"
            android:layout_weight="0.5" />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/second">


        <TextView
            android:id="@+id/txtAdresse"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGrey"
            android:text="Adresse :" />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/fourth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/third">


        <TextView
            android:id="@+id/txtDetailAdresse"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fourth">

        <TextView
            android:id="@+id/txtCodepostal"
            style="@style/TextAppearance.AppCompat.Large"
            android:background="@color/colorGrey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Code Postal :" />

        <TextView
            style="@style/TextAppearance.AppCompat.Large"
            android:background="@color/colorGrey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Ville :" />


    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/clientSix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/five">

        <TextView
            android:id="@+id/txtDetailCodepostal"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/txtDetailVille"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/clientSeven"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clientSix">


        <TextView
            android:id="@+id/txtTelephone"
            android:background="@color/colorGrey"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Téléphone :" />


    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/clientHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clientSeven">

        <TextView
            android:id="@+id/txtDetailTelephone"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/clientNine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clientHeight">


        <TextView
            android:id="@+id/txtMail"
            style="@style/TextAppearance.AppCompat.Large"
            android:background="@color/colorGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email :" />


    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/clientTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clientNine">

        <TextView
            android:id="@+id/txtDetailMail"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/clientEleven"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clientTen">


        <TextView
            android:id="@+id/txtPermis"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:background="@color/colorGrey"
            android:layout_height="wrap_content"
            android:text="Numéro de permis :" />


    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/clientTwelve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clientEleven">

        <TextView
            android:id="@+id/txtDetailPermis"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <Button
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:background="@color/colorRed"
        android:text="Modifier"
        android:onClick="editClient"/>

</RelativeLayout>