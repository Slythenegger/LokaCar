<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".LocationEnCoursActivity">


    <TextView
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:background="@color/colorGrey"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Résumé de la location :" />




    <TextView
        android:id="@+id/txtTarif"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="257dp"
        android:text="Prix total :"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="47dp" />

    <TextView
        android:id="@+id/txtEuros"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txtTarif"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        android:text="€" />


    <TextView
        android:id="@+id/txtTarifLocEnCours"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txtTarif"
        android:layout_marginEnd="105dp"
        android:layout_marginRight="105dp" />

    <TextView
        android:id="@+id/txtRetourPrevu"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:text="Retour prévu le :" />

    <TextView
        android:id="@+id/txtRetourPrevuLocEnCours"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txtRetourPrevu"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp" />


    <TextView
        android:id="@+id/txtDureeLoc"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="137dp"
        android:text="Nombre de jours de location :" />

    <TextView
        android:id="@+id/txtNbJourLocEnCours"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtDureeLoc"
        android:layout_marginLeft="-74dp"
        android:layout_marginStart="-74dp"
        android:layout_toEndOf="@+id/txtEuros"
        android:layout_toRightOf="@+id/txtEuros" />

    <Button
        android:id="@+id/btnAddPhotoRetour"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="178dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:background="@color/colorRed"
        android:onClick="finishLocation"
        android:text="Fin location" />

    <Button
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtTarif"
        android:layout_alignTop="@+id/btnAddPhotoRetour"
        android:background="@color/colorLoc"
        android:text="Photos retour"
        android:layout_alignLeft="@+id/txtTarif" />


    <Button
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:background="@color/colornewLocation"
        android:onClick="backAccueil"
        android:text="Retour Accueil" />


</RelativeLayout>